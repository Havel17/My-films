<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.havel.team.watchfilm">

    <application
        android:name=".database.DataBaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_film"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_film"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".wantFilmsActivity.WantFilmsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewedFilmsActivity.ViewedFilmsActivity"/>
    </application>

</manifest>